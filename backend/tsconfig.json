{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "backend/src",
    "sourceMap": true,
    "types": ["node"],
    "baseUrl": "./",
    // "paths": {
    //   "@utils/*": ["src/utils/*"],
    //   "@controllers/*": ["src/controllers/*"],
    //   "@config/*": ["src/utils/config"]
    // },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["backend/src", "typings.d.ts"],
  "exclude": ["dist", "node_modules"]
}
