{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": true,
    "types": ["node"]
  },
  "include": ["src", "typings.d.ts"],
  "exclude": ["dist", "node_modules"],

  "ts-node": {
    "esm": true
  }
}
